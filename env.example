############################################
# Root env file (used by docker-compose)
############################################

# Google OAuth / Google Identity Services
# Create this in Google Cloud Console (OAuth 2.0 Client ID for "Web application").
GOOGLE_OAUTH_CLIENT_ID="YOUR_GOOGLE_OAUTH_CLIENT_ID.apps.googleusercontent.com"

# GitHub OAuth
# Create this in GitHub Settings > Developer settings > OAuth Apps
GITHUB_OAUTH_CLIENT_ID="YOUR_GITHUB_CLIENT_ID"
GITHUB_OAUTH_CLIENT_SECRET="YOUR_GITHUB_CLIENT_SECRET"

# Stripe Payment Gateway
# Create an account at https://stripe.com/ and get your API keys from Dashboard
STRIPE_SECRET_KEY="sk_test_YOUR_SECRET_KEY"
STRIPE_PUBLISHABLE_KEY="pk_test_YOUR_PUBLISHABLE_KEY"
STRIPE_WEBHOOK_SECRET="whsec_YOUR_WEBHOOK_SECRET"

# Frontend URL (for Stripe redirects)
FRONTEND_URL="http://localhost:5173"

# Backend (optional defaults for local/dev)
DJANGO_SECRET_KEY="change-me"
DJANGO_DEBUG="1"
DJANGO_ALLOWED_HOSTS="*"
CORS_ALLOWED_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"
CSRF_TRUSTED_ORIGINS="http://localhost,http://127.0.0.1"
